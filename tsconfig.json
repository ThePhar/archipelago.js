{
    "compilerOptions": {
        "rootDir": "./src/",
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true
    },
    "exclude": [
        "_ignore",
        "coverage",
        "dist",
        "docs",
        "node_modules",
        "packs",
        "eslint.config.mjs",
        "build.mjs",
    ],
}
